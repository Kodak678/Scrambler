<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:allowBackup="true"
        android:fullBackupOnly="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/english_ime_name"
        android:supportsRtl="true">
        
        <activity
            android:name="Scrambler.ScramblerMainActivity"
            android:exported="true"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"> 
                  <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service
            android:name=".latin.LatinIME"
            android:directBootAware="true"
            android:exported="false"
            android:label="@string/english_ime_name"
            android:permission="android.permission.BIND_INPUT_METHOD">
            <intent-filter>
                <action android:name="android.view.InputMethod" />
            </intent-filter>

            <meta-data
                android:name="android.view.im"
                android:resource="@xml/method" />
        </service>

        <activity
            android:name=".latin.settings.SettingsActivity"
            android:exported="true"
            android:label="@string/english_ime_name"
            android:theme="@style/platformSettingsTheme"
            android:parentActivityName="Scrambler.ScramblerMainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="Scrambler.ScramblerMainActivity" />
        </activity>
            
        <receiver
            android:name=".latin.SystemBroadcastReceiver"
            android:exported="false">
            <intent-filter>
                <action android:name="android.intent.action.LOCALE_CHANGED" />
            </intent-filter>
        </receiver>
        
    </application>

</manifest>